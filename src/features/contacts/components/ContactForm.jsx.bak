import { useContacts } from "@/features/contacts/context/ContactsContext";

const ContactForm = () => {
  const { state, actions } = useContacts();
  const { currentContact, errors, editingId } = state;

  const handleChange = (e) => {
    actions.updateCurrentContact(e.target.name, e.target.value);
  };

  const handleSubmit = (e) => {
    e.preventDefault();

    if (editingId) {
      actions.updateContact({ ...currentContact, id: editingId });
    } else {
      actions.createContact(currentContact);
    }
  };

  return (
    <form onSubmit={handleSubmit} style={{ marginBottom: "2rem" }}>
      <input
        name="firstName"
        placeholder="نام"
        value={currentContact.firstName}
        onChange={handleChange}
      />
      <span>{errors.firstName}</span>

      <input
        name="lastName"
        placeholder="نام خانوادگی"
        value={currentContact.lastName}
        onChange={handleChange}
      />
      <span>{errors.lastName}</span>

      <input
        name="email"
        placeholder="ایمیل"
        value={currentContact.email}
        onChange={handleChange}
      />
      <span>{errors.email}</span>

      <input
        name="phone"
        placeholder="شماره"
        value={currentContact.phone}
        onChange={handleChange}
      />
      <span>{errors.phone}</span>

      <button type="submit">
        {editingId ? "ویرایش مخاطب" : "افزودن مخاطب"}
      </button>
    </form>
  );
};

export default ContactForm;
