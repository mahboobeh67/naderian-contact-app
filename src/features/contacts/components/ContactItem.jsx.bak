import { useContacts } from "@/features/contacts/context/ContactsContext";

const ContactItem = ({ contact }) => {
  const { actions } = useContacts();

  return (
    <div
      style={{
        padding: "0.8rem",
        border: "1px solid #ddd",
        borderRadius: "8px",
        marginBottom: "0.5rem",
      }}
    >
      <strong>{contact.firstName} {contact.lastName}</strong>  
      <br />
      <small>{contact.email}</small> | <small>{contact.phone}</small>

      <div style={{ marginTop: "0.5rem" }}>
        <button onClick={() => actions.startEditing(contact.id)}>ویرایش</button>
        <button onClick={() => actions.deleteContact(contact.id)}>حذف</button>
      </div>
    </div>
  );
};

export default ContactItem;
